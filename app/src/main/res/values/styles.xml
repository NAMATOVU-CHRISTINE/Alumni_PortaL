<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="ClickableTextPrompt">
        <item name="android:textColor">@color/must_green</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Home Screen Styles - Updated for Material 3 -->
    <style name="home_section_header">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textAppearance">@style/TextAppearance.Material3.TitleMedium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="home_dashboard_card" parent="Widget.Material3.CardView.Elevated">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
        <item name="cardCornerRadius">12dp</item>
    </style>

    <style name="home_menu_card" parent="Widget.Material3.CardView.Outlined">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="home_menu_card_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">20dp</item>
        <item name="android:textAppearance">@style/TextAppearance.Material3.TitleMedium</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:drawableTint" tools:targetApi="m">?attr/colorPrimary</item>
    </style>

    <!-- Centralized Material 3 app styles (used by converted layouts) -->
    <!-- App typography shortcuts -->
    <style name="App.TextAppearance.Title" parent="TextAppearance.Material3.TitleLarge" />
    <style name="App.TextAppearance.Subtitle" parent="TextAppearance.Material3.TitleMedium" />
    <style name="App.TextAppearance.Body" parent="TextAppearance.Material3.BodyMedium" />
    <style name="App.TextAppearance.Caption" parent="TextAppearance.Material3.BodySmall" />

    <!-- Shape appearances -->
    <style name="Shape.App.Small" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="Shape.App.Medium" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="Shape.App.Rounded" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>

    <!-- Material 3 Button style used across the app -->
    <style name="App.Material3.Button" parent="Widget.Material3.Button">
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="shapeAppearance">@style/Shape.App.Medium</item>
    </style>

    <!-- Custom Chip style to avoid blue colors -->
    <style name="App.Material3.Chip" parent="Widget.Material3.Chip.Filter">
        <item name="chipBackgroundColor">@color/light_gray</item>
        <item name="android:textColor">@color/black</item>
        <item name="chipStrokeColor">@color/must_green</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipCornerRadius">16dp</item>
    </style>

    <!-- TextInputLayout (outlined) consistent style -->
    <style name="App.Material3.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">?attr/colorPrimary</item>
        <item name="hintTextColor">?attr/colorOnSurface</item>
        <item name="helperTextTextAppearance">@style/TextAppearance.Material3.BodySmall</item>
        <item name="shapeAppearance">@style/Shape.App.Small</item>
    </style>

    <!-- Card style for list items and content containers -->
    <style name="App.Material3.Card" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>


</resources>
