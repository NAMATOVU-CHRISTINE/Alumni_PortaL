<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- App theme using Material 3 Light Theme Only - Force white background always -->
    <style name="Theme.Alumni_Portal" parent="Theme.Material3.Light.NoActionBar">
        <!-- Core colors (refer to colors.xml) -->
        <item name="colorPrimary">@color/must_green</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/must_gold</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Material3 specific color roles - Force light theme -->
        <item name="android:colorBackground">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorOnBackground">@color/black</item>

        <!-- App bar and system bars -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="android:navigationBarColor">?attr/colorSurface</item>

        <!-- Elevation and shapes -->
        <item name="materialCardViewStyle">@style/Widget.Material3.CardView.Elevated</item>
    </style>

    <!-- CircleImageView style -->
    <style name="CircleImageView">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

</resources>
