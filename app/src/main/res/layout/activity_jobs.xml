<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground"
    tools:context=".JobsActivity">

    <!-- App Bar -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/must_green"
            app:title="ðŸ’¼ Career Opportunities"
            app:titleTextColor="@color/white"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:navigationIconTint="@color/white"
            app:layout_scrollFlags="scroll|enterAlways" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Welcome Header -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="?attr/colorSurface"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="@drawable/gradient_motivation_bg">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸŒŸ Discover Career Opportunities"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/must_green"
                        android:gravity="center"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Find internships, jobs &amp; graduate programs"
                        android:textSize="13sp"
                        android:textColor="?android:attr/textColorSecondary"
                        android:gravity="center" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Search Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ” Find Opportunities"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/must_green"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="4dp" />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="?attr/colorSurface">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="8dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_search"
                            android:layout_marginStart="12dp"
                            android:layout_marginEnd="8dp"
                            app:tint="@color/text_secondary" />

                        <EditText
                            android:id="@+id/etSearch"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:hint="Search by title, company, or keywords..."
                            android:background="@null"
                            android:textSize="15sp"
                            android:textColor="?android:attr/textColorPrimary"
                            android:textColorHint="@color/text_secondary"
                            android:imeOptions="actionSearch"
                            android:inputType="text" />

                        <Spinner
                            android:id="@+id/spinnerSort"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="12dp" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <!-- Filter Categories Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“‚ Filter by Category"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/must_green"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="4dp" />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="?attr/colorSurface">

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="none"
                        android:layout_margin="8dp">

                        <com.google.android.material.chip.ChipGroup
                            android:id="@+id/chipGroupCategories"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:singleSelection="true"
                            app:selectionRequired="false"
                            android:layout_margin="4dp">

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chipAll"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="All"
                                android:checked="true"
                                style="@style/Widget.Material3.Chip.Filter"
                                app:chipBackgroundColor="@color/light_green"
                                android:textColor="@color/must_green" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chipInternships"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸŽ“ Internships"
                                style="@style/Widget.Material3.Chip.Filter"
                                app:chipBackgroundColor="@color/light_green"
                                android:textColor="@color/must_green" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chipJobs"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸ’¼ Full-time Jobs"
                                style="@style/Widget.Material3.Chip.Filter"
                                app:chipBackgroundColor="@color/light_green"
                                android:textColor="@color/must_green" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chipGraduate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸš€ Graduate Programs"
                                style="@style/Widget.Material3.Chip.Filter"
                                app:chipBackgroundColor="@color/light_green"
                                android:textColor="@color/must_green" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chipApprenticeship"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸ”§ Apprenticeships"
                                style="@style/Widget.Material3.Chip.Filter"
                                app:chipBackgroundColor="@color/light_green"
                                android:textColor="@color/must_green" />

                        </com.google.android.material.chip.ChipGroup>

                    </HorizontalScrollView>

                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <!-- Featured Opportunities Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ðŸŒŸ Featured Opportunities"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/must_green"
                        android:layout_marginStart="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Swipe to explore â†’"
                        android:textSize="11sp"
                        android:textColor="?android:attr/textColorSecondary"
                        android:layout_marginEnd="4dp" />

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewFeatured"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:paddingStart="4dp"
                    android:paddingEnd="16dp"
                    tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:orientation="horizontal"
                    tools:listitem="@layout/item_opportunity_featured" />

            </LinearLayout>

            <!-- All Opportunities Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="80dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ðŸ’¼ All Opportunities"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/must_green"
                        android:layout_marginStart="4dp" />

                    <TextView
                        android:id="@+id/tvResultsCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 results"
                        android:textSize="11sp"
                        android:textColor="?android:attr/textColorSecondary"
                        android:layout_marginEnd="4dp" />

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewOpportunities"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/item_opportunity_card" />

                <!-- Empty State -->
                <LinearLayout
                    android:id="@+id/emptyStateLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="40dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ”"
                        android:textSize="64sp"
                        android:layout_marginBottom="20dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No opportunities found"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="?android:attr/textColorPrimary"
                        android:gravity="center"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Try adjusting your search or filters"
                        android:textSize="14sp"
                        android:textColor="?android:attr/textColorSecondary"
                        android:gravity="center"
                        android:layout_marginBottom="20dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnClearFilters"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Clear Filters"
                        android:textColor="@color/must_green"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        app:strokeColor="@color/must_green"
                        app:cornerRadius="20dp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Floating Action Button -->
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fabAddOpportunity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="20dp"
        android:text="Post Opportunity"
        android:icon="@drawable/ic_add"
        app:backgroundTint="@color/must_green"
        app:iconTint="@color/white"
        android:textColor="@color/white"
        app:cornerRadius="16dp"
        android:elevation="8dp"
        android:contentDescription="Post New Opportunity" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>