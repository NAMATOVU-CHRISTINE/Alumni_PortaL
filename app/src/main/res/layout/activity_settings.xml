<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- App Bar Layout -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="2dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/must_green"
            app:titleTextColor="@color/white"
            app:navigationIconTint="@color/white" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main Content -->
    <ScrollView 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Section 1: Profile & Account -->
            <TextView
                android:text="Profile &amp; Account"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/must_green"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="@color/white"
                app:strokeColor="@color/light_green"
                app:strokeWidth="1dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/editProfileOption"
                        android:text="Edit Profile"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:padding="16dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground"
                        android:drawableStart="@drawable/ic_menu_edit"
                        android:drawableTint="@color/must_green"
                        android:drawablePadding="12dp"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/light_green"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp" />

                    <TextView
                        android:id="@+id/changePasswordOption"
                        android:text="Change Password"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:padding="16dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground"
                        android:drawableStart="@drawable/ic_settings"
                        android:drawableTint="@color/must_green"
                        android:drawablePadding="12dp"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Section 2: App Preferences -->
            <TextView
                android:text="App Preferences"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/must_green"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="@color/white"
                app:strokeColor="@color/light_green"
                app:strokeWidth="1dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/themeOption"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:padding="16dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_settings"
                            app:tint="@color/must_green"
                            android:layout_marginEnd="12dp" />

                        <TextView
                            android:text="Theme"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/themeSummary"
                            android:text="Light"
                            android:textSize="14sp"
                            android:textColor="@color/dark_gray"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Section 3: App Notifications -->
            <TextView
                android:text="App Notifications"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/must_green"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="@color/white"
                app:strokeColor="@color/light_green"
                app:strokeWidth="1dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/allNotificationsSwitch"
                        android:text="All Notifications"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:padding="16dp"
                        android:checked="true"
                        app:thumbTint="@color/must_green"
                        app:trackTint="@color/light_green"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/light_green"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp" />

                    <TextView
                        android:id="@+id/gmailSetupOption"
                        android:text="Email Notifications Setup"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:padding="16dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground"
                        android:drawableStart="@drawable/ic_email"
                        android:drawableTint="@color/must_green"
                        android:drawablePadding="12dp"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/light_green"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/mentorshipRequestsSwitch"
                        android:text="Mentorship Requests"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:padding="16dp"
                        android:checked="true"
                        app:thumbTint="@color/must_green"
                        app:trackTint="@color/light_green"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/light_green"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/eventUpdatesSwitch"
                        android:text="Event Updates"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:padding="16dp"
                        android:checked="true"
                        app:thumbTint="@color/must_green"
                        app:trackTint="@color/light_green"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/light_green"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/announcementsSwitch"
                        android:text="Important Announcements"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:padding="16dp"
                        android:checked="true"
                        app:thumbTint="@color/must_green"
                        app:trackTint="@color/light_green"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Section 4: Account Actions -->
            <TextView
                android:text="Account Actions"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/must_green"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="@color/white"
                app:strokeColor="@color/light_green"
                app:strokeWidth="1dp"
                android:layout_marginBottom="32dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/logoutOption"
                        android:text="Logout"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:padding="16dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground"
                        android:drawableStart="@drawable/ic_logout"
                        android:drawableTint="@color/must_green"
                        android:drawablePadding="12dp"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/light_green"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp" />

                    <TextView
                        android:id="@+id/deleteAccountOption"
                        android:text="Delete Account"
                        android:textColor="#D32F2F"
                        android:textSize="14sp"
                        android:padding="16dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground"
                        android:drawableStart="@drawable/ic_error"
                        android:drawableTint="#D32F2F"
                        android:drawablePadding="12dp"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>