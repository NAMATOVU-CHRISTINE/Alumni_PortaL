<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="3dp"
    app:cardBackgroundColor="?attr/colorSurface"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <!-- Company Logo/Icon -->
            <LinearLayout
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:gravity="center"
                android:background="@drawable/circle_background"
                android:backgroundTint="@color/light_green"
                android:layout_marginEnd="12dp">

                <TextView
                    android:id="@+id/tvCategoryIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ’¼"
                    android:textSize="24sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Senior Frontend Developer"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="?android:attr/textColorPrimary"
                    android:maxLines="2"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/tvCompany"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Google Inc."
                    android:textSize="14sp"
                    android:textColor="?android:attr/textColorSecondary"
                    android:layout_marginTop="2dp" />

                <TextView
                    android:id="@+id/tvLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“ Mountain View, CA"
                    android:textSize="12sp"
                    android:textColor="?android:attr/textColorSecondary"
                    android:layout_marginTop="1dp" />

            </LinearLayout>

            <!-- Save Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSave"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="ðŸ”–"
                android:textSize="16sp"
                android:backgroundTint="@color/light_green"
                style="@style/Widget.Material3.Button"
                app:cornerRadius="20dp"
                android:minWidth="0dp"
                android:padding="0dp" />

        </LinearLayout>

        <!-- Tags Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ’¼ Full-time"
                android:textSize="12sp"
                android:textColor="@color/must_green"
                app:chipBackgroundColor="@color/light_green"
                app:chipMinHeight="32dp"
                style="@style/Widget.Material3.Chip.Assist" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tvDeadline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apply by Dec 15"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="@color/must_green"
                android:drawableStart="@drawable/ic_event"
                android:drawablePadding="4dp"
                app:drawableTint="@color/must_green" />

        </LinearLayout>

        <!-- Description -->
        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="We're looking for a talented frontend developer to join our innovative team and help build the next generation of web applications. You'll work with cutting-edge technologies and collaborate with world-class engineers."
            android:textSize="13sp"
            android:textColor="?android:attr/textColorSecondary"
            android:layout_marginBottom="12dp"
            android:maxLines="3"
            android:ellipsize="end"
            android:lineSpacingExtra="2dp" />

        <!-- Stats Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/tvDatePosted"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Posted 3 days ago"
                android:textSize="12sp"
                android:textColor="?android:attr/textColorSecondary"
                android:drawableStart="@drawable/ic_access_time"
                android:drawablePadding="6dp"
                app:drawableTint="@color/text_secondary" />

            <TextView
                android:id="@+id/tvApplications"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ‘¥ 24 applicants"
                android:textSize="12sp"
                android:textColor="?android:attr/textColorSecondary"
                android:layout_marginEnd="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ’° $80k-120k"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/must_green" />

        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDetails"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:text="View Details"
                android:textSize="13sp"
                android:textColor="@color/must_green"
                android:layout_marginEnd="8dp"
                style="@style/Widget.Material3.Button.OutlinedButton"
                app:strokeColor="@color/must_green"
                app:cornerRadius="10dp"
                app:icon="@drawable/ic_info"
                app:iconTint="@color/must_green" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnApply"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:text="Apply Now"
                android:textSize="13sp"
                android:textColor="@color/white"
                android:backgroundTint="@color/must_green"
                android:layout_marginStart="8dp"
                app:cornerRadius="10dp"
                style="@style/Widget.Material3.Button"
                app:icon="@drawable/ic_send"
                app:iconTint="@color/white" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>