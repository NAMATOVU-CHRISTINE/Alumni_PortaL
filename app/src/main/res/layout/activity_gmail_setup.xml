<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="?android:attr/colorBackground">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gmail API Setup"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <TextView
        android:id="@+id/statusText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Checking Gmail API status..."
        android:textSize="16sp"
        android:layout_marginBottom="16dp"
        android:padding="12dp"
        android:background="@drawable/card_background"
        android:elevation="2dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="To send email notifications for mentorship requests, the app needs to authenticate with Gmail API."
        android:textSize="14sp"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/setupButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start Setup"
        android:layout_marginBottom="16dp"
        style="@style/Widget.Material3.Button" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="After clicking the setup button, you'll be taken to Google's authorization page. Copy the authorization code and paste it below:"
        android:textSize="14sp"
        android:layout_marginBottom="8dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

        <EditText
            android:id="@+id/authCodeInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Authorization Code"
            android:inputType="text"
            android:singleLine="true" />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/completeButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Complete Setup"
        android:layout_marginBottom="16dp"
        style="@style/Widget.Material3.Button" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Note: This setup only needs to be done once. The app will remember your authentication for future email notifications."
        android:textSize="12sp"
        android:textStyle="italic"
        android:layout_marginTop="16dp"
        android:gravity="center" />

</LinearLayout>