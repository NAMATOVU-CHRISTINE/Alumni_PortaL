<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardElevation="2dp"
    app:cardCornerRadius="12dp"
    app:cardBackgroundColor="@android:color/white"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Content Section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginEnd="12dp">

            <!-- Category Chip -->
            <com.google.android.material.chip.Chip
                android:id="@+id/categoryChip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="University"
                android:textSize="10sp"
                android:layout_marginBottom="8dp"
                app:chipBackgroundColor="@color/light_green"
                app:chipStrokeWidth="0dp"
                app:chipMinHeight="24dp"
                style="@style/Widget.Material3.Chip.Assist" />

            <!-- Title -->
            <TextView
                android:id="@+id/newsTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MUST Announces New Research Center"
                android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginBottom="8dp" />

            <!-- Summary -->
            <TextView
                android:id="@+id/newsSummary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mbarara University of Science and Technology has announced the establishment of a new research center focusing on innovation and technology..."
                android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                android:textColor="@color/dark_gray"
                android:maxLines="3"
                android:ellipsize="end"
                android:layout_marginBottom="12dp" />

            <!-- Footer Information -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Author -->
                <TextView
                    android:id="@+id/newsAuthor"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="MUST Communications"
                    android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                    android:textColor="@color/must_green"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <!-- Time -->
                <TextView
                    android:id="@+id/newsTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 hours ago"
                    android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                    android:textColor="@color/light_gray"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Image Section (Optional) -->
        <ImageView
            android:id="@+id/newsImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:background="@color/light_gray"
            app:srcCompat="@drawable/ic_image_placeholder"
            android:contentDescription="News image"
            android:visibility="visible" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>