<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_background">

    <!-- App Bar -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/must_green"
            app:titleTextColor="@color/white"
            app:navigationIcon="@drawable/ic_arrow_back_24"
            app:navigationIconTint="@color/white" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Header Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Company Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <!-- Company Logo -->
                        <TextView
                            android:id="@+id/tvCompanyLogo"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:text="ðŸ¢"
                            android:textSize="32sp"
                            android:gravity="center"
                            android:background="@drawable/circle_background"
                            android:backgroundTint="@color/light_gray"
                            android:layout_marginEnd="16dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvCompany"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Microsoft Corporation"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/text_primary" />

                            <TextView
                                android:id="@+id/tvDatePosted"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Posted 2 days ago"
                                android:textSize="14sp"
                                android:textColor="@color/text_secondary"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                        <!-- Save Button -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnSave"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:text="ðŸ”– Save"
                            android:textSize="12sp"
                            android:textColor="@color/must_green"
                            style="@style/Widget.Material3.Button.TextButton"
                            android:minWidth="0dp"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp" />

                    </LinearLayout>

                    <!-- Position Title -->
                    <TextView
                        android:id="@+id/tvTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Senior Software Engineer"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="12dp" />

                    <!-- Category and Key Info Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipCategory"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ’¼ Job"
                            android:textSize="12sp"
                            app:chipMinHeight="32dp"
                            style="@style/Widget.Material3.Chip.Assist" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/tvApplicationsCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ‘¥ 24 applications"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary" />

                    </LinearLayout>

                    <!-- Key Details Grid -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <!-- Location -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginEnd="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸ“ Location"
                                android:textSize="12sp"
                                android:textColor="@color/text_secondary"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvLocation"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Seattle, WA"
                                android:textSize="14sp"
                                android:textColor="@color/text_primary"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                        <!-- Salary -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸ’° Salary"
                                android:textSize="12sp"
                                android:textColor="@color/text_secondary"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvSalary"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$80,000 - $120,000"
                                android:textSize="14sp"
                                android:textColor="@color/text_primary"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Deadline -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@color/light_yellow"
                        android:padding="12dp"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â°"
                            android:textSize="16sp"
                            android:layout_marginEnd="8dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Application Deadline"
                                android:textSize="12sp"
                                android:textColor="@color/text_secondary"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvDeadline"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="November 25, 2025"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/orange"
                                android:layout_marginTop="2dp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Description Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“ Job Description"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/must_green"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:id="@+id/tvDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="We are seeking a talented Senior Software Engineer to join our dynamic team. This role offers the opportunity to work on cutting-edge projects and make a significant impact on our products used by millions worldwide."
                        android:textSize="14sp"
                        android:textColor="@color/text_primary"
                        android:lineSpacingExtra="4dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Requirements Section -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardRequirements"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="âœ… Requirements"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/must_green"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:id="@+id/tvRequirements"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="â€¢ Bachelor's degree in Computer Science or related field\nâ€¢ 5+ years of software development experience\nâ€¢ Proficiency in Java, Python, or similar languages\nâ€¢ Experience with cloud platforms (AWS, Azure, GCP)"
                        android:textSize="14sp"
                        android:textColor="@color/text_primary"
                        android:lineSpacingExtra="4dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Benefits Section -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardBenefits"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸŽ Benefits &amp; Perks"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/must_green"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:id="@+id/tvBenefits"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="â€¢ Comprehensive health insurance\nâ€¢ Flexible work arrangements\nâ€¢ Professional development opportunities\nâ€¢ Stock options and bonuses"
                        android:textSize="14sp"
                        android:textColor="@color/text_primary"
                        android:lineSpacingExtra="4dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Application Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="32dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“§ How to Apply"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/must_green"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:id="@+id/tvApplicationInstructions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Send your resume and cover letter to careers@microsoft.com with the subject line 'Senior Software Engineer Application'."
                        android:textSize="14sp"
                        android:textColor="@color/text_primary"
                        android:lineSpacingExtra="4dp"
                        android:layout_marginBottom="16dp" />

                    <!-- Application Actions -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnShare"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:text="ðŸ“¤ Share"
                            android:textColor="@color/must_green"
                            android:layout_marginEnd="8dp"
                            app:strokeColor="@color/must_green"
                            app:strokeWidth="1dp"
                            app:cornerRadius="12dp"
                            style="@style/Widget.Material3.Button.OutlinedButton" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnApply"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="2"
                            android:text="ðŸš€ Apply Now"
                            android:textColor="@color/white"
                            android:backgroundTint="@color/must_green"
                            android:layout_marginStart="8dp"
                            app:cornerRadius="12dp"
                            style="@style/Widget.Material3.Button" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>