<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".HomeActivity">

<androidx.coordinatorlayout.widget.CoordinatorLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">

    <!-- App Bar -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/must_green"
            app:title="@string/app_name"
            app:titleTextColor="@color/white"
            app:navigationIcon="@drawable/ic_menu"
            app:menu="@menu/home_menu"
            app:popupTheme="@style/ThemeOverlay.Material3.Light" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Scrollable Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="24dp"
            android:paddingBottom="16dp"
            android:clipToPadding="false">

            <!-- Compact Welcome Header Section -->
            <com.google.android.material.card.MaterialCardView
                style="@style/App.Material3.Card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="20dp"
                app:strokeColor="@color/light_green"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        app:cardCornerRadius="24dp"
                        app:strokeColor="@color/must_gold"
                        app:strokeWidth="2dp"
                        app:cardElevation="1dp">

                        <ImageView
                            android:id="@+id/homeProfileImage"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_person"
                            android:scaleType="centerCrop"
                            android:contentDescription="@string/profile_image_description" />

                    </com.google.android.material.card.MaterialCardView>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <TextView
                            android:id="@+id/welcomeText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/welcome_default"
                            android:textAppearance="@style/App.TextAppearance.Title"
                            android:textStyle="bold"
                            android:textColor="?android:attr/textColorPrimary"
                            android:textSize="18sp"/>

                        <TextView
                            android:id="@+id/homeSlogan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/connect_learn_grow_together"
                            android:textAppearance="@style/App.TextAppearance.Body"
                            android:textColor="?android:attr/textColorSecondary"
                            android:layout_marginTop="2dp"
                            android:textSize="12sp"/>
                    </LinearLayout>

                    <!-- Settings Icon -->
                    <ImageView
                        android:id="@+id/settingsIcon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_settings"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:padding="4dp"
                        android:clickable="true"
                        android:focusable="true"
                        app:tint="@color/must_green"
                        android:contentDescription="App Settings" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Rotating Motivational Tips Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="24dp"
                android:padding="12dp"
                android:background="@drawable/gradient_motivation_bg">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_lightbulb"
                    app:tint="@color/must_green"
                    android:layout_marginEnd="8dp"
                    android:contentDescription="Tip icon" />

                <TextView
                    android:id="@+id/rotatingMotivationTip"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Keep connecting, keep growing!"
                    android:textAppearance="@style/App.TextAppearance.Body"
                    android:textColor="@color/must_green"
                    android:textStyle="italic"
                    android:textSize="13sp"
                    android:gravity="center_vertical"/>

            </LinearLayout>

            <!-- Quick Stats Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tvConnectionsCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="28sp"
                            android:textStyle="bold"
                            android:textColor="@color/must_green"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Connections"
                            android:textSize="13sp"
                            android:textColor="?android:attr/textColorSecondary"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="?android:attr/listDivider"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tvProfileViewsCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="28sp"
                            android:textStyle="bold"
                            android:textColor="@color/must_green"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Profile Views"
                            android:textSize="13sp"
                            android:textColor="?android:attr/textColorSecondary"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Quick Actions -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Quick Actions"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="?android:attr/textColorPrimary"
                android:layout_marginBottom="12dp"/>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/alumniDirectoryCard"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_people"
                        app:tint="@color/must_green"
                        android:contentDescription="Find Alumni"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Find Alumni"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:textColor="?android:attr/textColorPrimary"
                        android:textAlignment="center"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- For You Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Recommended for You"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="?android:attr/textColorPrimary"
                android:layout_marginBottom="12dp"/>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/recommendationsCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="12dp">

                <LinearLayout
                    android:id="@+id/recommendationsContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Header Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_work"
                            android:contentDescription="Recommendations"
                            app:tint="@color/must_green"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Job Opportunities"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="?android:attr/textColorPrimary"
                            android:layout_marginStart="8dp"/>

                        <TextView
                            android:id="@+id/recommendationsBadge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="11sp"
                            android:textStyle="bold"
                            android:textColor="@color/must_green"
                            android:visibility="gone"/>
                    </LinearLayout>

                    <!-- Content Area - Shows recommendations -->
                    <LinearLayout
                        android:id="@+id/recommendationsContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <!-- Dynamic Recommendations Content -->
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recommendationsRecyclerView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:nestedScrollingEnabled="false"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:id="@+id/recommendationsDescription"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="12sp"
                            android:textColor="?android:attr/textColorSecondary"
                            android:layout_marginBottom="8dp"
                            android:visibility="gone"/>

                        <Button
                            android:id="@+id/jobsCard"
                            style="@style/Widget.Material3.Button.TextButton"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:text="@string/browse_jobs"
                            android:textSize="12sp"
                            android:layout_gravity="end"
                            android:textColor="@color/must_green"
                            app:cornerRadius="8dp"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"/>

                    </LinearLayout>

                    <!-- Empty State -->
                    <LinearLayout
                        android:id="@+id/recommendationsEmptyState"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_work"
                            app:tint="@color/light_gray"
                            android:layout_marginBottom="8dp"
                            android:contentDescription="No recommendations" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="No recommendations yet"
                            android:textSize="13sp"
                            android:textColor="?android:attr/textColorSecondary"
                            android:textAlignment="center"/>
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Recent Activity Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Recent Activity"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="?android:attr/textColorPrimary"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="12dp"/>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/recentActivityCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="12dp">

                <LinearLayout
                    android:id="@+id/recentActivityContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Dynamic Recent Activity Content -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recentActivitiesRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        android:layout_marginBottom="12dp" />

                    <!-- View More Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnViewMoreActivities"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="View All Activities"
                        android:textColor="@color/must_green"
                        android:textSize="13sp"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        app:strokeColor="@color/must_green"
                        app:cornerRadius="8dp" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>

<!-- Navigation Drawer -->
<com.google.android.material.navigation.NavigationView
    android:id="@+id/navigationView"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:fitsSystemWindows="true"
    app:headerLayout="@layout/nav_header"
    app:menu="@menu/nav_drawer_menu" />

</androidx.drawerlayout.widget.DrawerLayout>
