<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    android:fitsSystemWindows="true"
    tools:context=".HomeActivity">

    <!-- App Bar -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/must_green"
            app:title="@string/app_name"
            app:titleTextColor="@color/white"
            app:menu="@menu/home_menu"
            app:popupTheme="@style/ThemeOverlay.Material3.Light" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Scrollable Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="24dp"
            android:paddingBottom="16dp"
            android:clipToPadding="false">

            <!-- Welcome Header Section -->
            <com.google.android.material.card.MaterialCardView
                style="@style/App.Material3.Card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp"
                    android:gravity="center_vertical">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        app:cardCornerRadius="32dp"
                        app:strokeColor="@color/must_gold"
                        app:strokeWidth="3dp"
                        app:cardElevation="2dp">

                        <ImageView
                            android:id="@+id/homeProfileImage"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_person"
                            android:scaleType="centerCrop"
                            android:contentDescription="@string/profile_image_description" />

                    </com.google.android.material.card.MaterialCardView>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:id="@+id/welcomeText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/welcome_default"
                            android:textAppearance="@style/App.TextAppearance.Title"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:textSize="22sp"/>

                        <TextView
                            android:id="@+id/motivationalQuote"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/daily_motivation"
                            android:textAppearance="@style/App.TextAppearance.Body"
                            android:textColor="@color/must_green"
                            android:textStyle="italic"
                            android:layout_marginTop="4dp"
                            android:textSize="12sp"/>

                        <TextView
                            android:id="@+id/homeSlogan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/connect_learn_grow_together"
                            android:textAppearance="@style/App.TextAppearance.Body"
                            android:textColor="@color/dark_gray"
                            android:layout_marginTop="2dp"
                            android:textSize="14sp"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Grow Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ðŸŒ± Grow"
                    android:textAppearance="@style/App.TextAppearance.Title"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="20sp"/>

                <Button
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="@string/see_all"
                    android:textSize="12sp"
                    android:textColor="@color/must_green"
                    app:cornerRadius="20dp"/>
            </LinearLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/mentorCard"
                        android:layout_width="160dp"
                        android:layout_height="120dp"
                        android:layout_marginEnd="16dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="3dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp"
                            android:background="@color/light_blue">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/ic_school"
                                android:contentDescription="@string/find_a_mentor"
                                app:tint="@color/must_green" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/find_mentors"
                                android:textSize="14sp"
                                android:textColor="@color/black"
                                android:textAlignment="center"
                                android:textStyle="bold"
                                android:layout_marginTop="8dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Connect with experts"
                                android:textSize="11sp"
                                android:textColor="@color/dark_gray"
                                android:textAlignment="center"
                                android:layout_marginTop="4dp" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/careerTipsCard"
                        android:layout_width="160dp"
                        android:layout_height="120dp"
                        android:layout_marginEnd="16dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="3dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp"
                            android:background="@color/light_green">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/ic_school"
                                android:contentDescription="Career Tips"
                                app:tint="@color/must_green" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Career Tips"
                                android:textSize="14sp"
                                android:textColor="@color/black"
                                android:textAlignment="center"
                                android:textStyle="bold"
                                android:layout_marginTop="8dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Advance your career"
                                android:textSize="11sp"
                                android:textColor="@color/dark_gray"
                                android:textAlignment="center"
                                android:layout_marginTop="4dp" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/knowledgeHubCard"
                        android:layout_width="160dp"
                        android:layout_height="120dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="3dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp"
                            android:background="@color/light_yellow">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/ic_book"
                                android:contentDescription="@string/knowledge_hub"
                                app:tint="@color/must_green" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/knowledge"
                                android:textSize="14sp"
                                android:textColor="@color/black"
                                android:textAlignment="center"
                                android:textStyle="bold"
                                android:layout_marginTop="8dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Learning resources"
                                android:textSize="11sp"
                                android:textColor="@color/dark_gray"
                                android:textAlignment="center"
                                android:layout_marginTop="4dp" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>
            </HorizontalScrollView>

            <!-- Connect Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ðŸ¤ Connect"
                    android:textAppearance="@style/App.TextAppearance.Title"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="20sp"/>

                <Button
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="@string/see_all"
                    android:textSize="12sp"
                    android:textColor="@color/must_green"
                    app:cornerRadius="20dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/profileCard"
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="3dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp"
                        android:background="@color/light_purple">

                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@drawable/ic_person"
                            android:contentDescription="@string/my_profile"
                            app:tint="@color/must_green"
                            android:layout_marginBottom="12dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/my_profile"
                            android:textAppearance="@style/App.TextAppearance.Body"
                            android:textColor="@color/black"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:textSize="14sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/view_and_edit"
                            android:textAppearance="@style/App.TextAppearance.Caption"
                            android:textColor="@color/dark_gray"
                            android:textAlignment="center"
                            android:layout_marginTop="4dp"
                            android:textSize="11sp"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/eventsCard"
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="3dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp"
                        android:background="@color/light_orange">

                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@drawable/ic_event"
                            android:contentDescription="@string/upcoming_events"
                            app:tint="@color/must_green"
                            android:layout_marginBottom="12dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/events"
                            android:textAppearance="@style/App.TextAppearance.Body"
                            android:textColor="@color/black"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:textSize="14sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Upcoming meetups"
                            android:textAppearance="@style/App.TextAppearance.Caption"
                            android:textColor="@color/dark_gray"
                            android:textAlignment="center"
                            android:layout_marginTop="4dp"
                            android:textSize="11sp"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <!-- For You Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="âœ¨ For You"
                    android:textAppearance="@style/App.TextAppearance.Title"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="20sp"/>

                <Button
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Customize"
                    android:textSize="12sp"
                    android:textColor="@color/must_green"
                    app:cornerRadius="20dp"/>
            </LinearLayout>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/recommendationsCard"
                style="@style/App.Material3.Card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="3dp"
                app:cardCornerRadius="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_work"
                            android:contentDescription="Recommendations"
                            app:tint="@color/must_green"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Recommended Jobs"
                            android:textAppearance="@style/App.TextAppearance.Subtitle"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_marginStart="12dp"
                            android:textSize="16sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3 new"
                            android:textAppearance="@style/App.TextAppearance.Body"
                            android:textStyle="bold"
                            android:textColor="@color/must_green"
                            android:textSize="12sp"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Based on your profile and interests, we found exciting opportunities that match your skills in software development and data analysis."
                        android:textAppearance="@style/App.TextAppearance.Body"
                        android:textColor="@color/dark_gray"
                        android:layout_marginBottom="12dp"
                        android:textSize="14sp"/>

                    <Button
                        android:id="@+id/jobsCard"
                        style="@style/Widget.Material3.Button.TextButton"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="@string/browse_jobs"
                        android:textSize="12sp"
                        android:layout_gravity="end"
                        android:textColor="@color/must_green"
                        app:cornerRadius="20dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Recent Activity Enhanced Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ“ˆ @string/recent_activity"
                android:textAppearance="@style/App.TextAppearance.Title"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="12dp"
                android:textSize="20sp"/>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/recentActivityCard"
                style="@style/App.Material3.Card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="3dp"
                app:cardCornerRadius="16dp">

                <LinearLayout
                    android:id="@+id/recentActivityContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:id="@+id/noActivityLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:visibility="visible"
                        android:padding="32dp">

                        <ImageView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:src="@drawable/ic_event"
                            android:contentDescription="No activities"
                            app:tint="@color/light_gray"
                            android:layout_marginBottom="16dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="No new activities yet"
                            android:textAppearance="@style/App.TextAppearance.Subtitle"
                            android:textColor="@color/dark_gray"
                            android:textAlignment="center"
                            android:textSize="16sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Check back soon for updates from your network!"
                            android:textAppearance="@style/App.TextAppearance.Body"
                            android:textColor="@color/light_gray"
                            android:textAlignment="center"
                            android:layout_marginTop="8dp"
                            android:textSize="14sp"/>
                    </LinearLayout>

                    <!-- Dynamic activity items will be added here when available -->

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
