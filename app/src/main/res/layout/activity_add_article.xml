<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-compat"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_background">

    <!-- App Bar -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/must_green"
            app:titleTextColor="@color/white"
            app:title="Add Article"
            app:navigationIcon="@drawable/ic_arrow_back" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Form Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Form Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="32dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Title Input -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:boxStrokeColor="@color/must_green"
                        app:hintTextColor="@color/must_green"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Article Title"
                            android:inputType="textCapSentences"
                            android:maxLength="100" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Description Input -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:boxStrokeColor="@color/must_green"
                        app:hintTextColor="@color/must_green"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etDescription"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Short Description (1-2 sentences)"
                            android:inputType="textCapSentences|textMultiLine"
                            android:maxLines="3"
                            android:maxLength="200" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Content Input -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:boxStrokeColor="@color/must_green"
                        app:hintTextColor="@color/must_green"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etContent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Full Article Content"
                            android:inputType="textCapSentences|textMultiLine"
                            android:minLines="5"
                            android:maxLines="10"
                            android:scrollbars="vertical" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Category Selection -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Category"
                        android:textSize="14sp"
                        android:textColor="@color/must_green"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chipGroupCategory"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:singleSelection="true"
                        app:selectionRequired="true"
                        android:layout_marginBottom="24dp">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipCategoryNetworking"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ¤ Networking"
                            android:checked="true"
                            style="@style/Widget.Material3.Chip.Filter"
                            app:chipBackgroundColor="@color/light_green"
                            android:textColor="@color/must_green" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipCategorySkills"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ’¡ Skills"
                            style="@style/Widget.Material3.Chip.Filter"
                            app:chipBackgroundColor="@color/light_green"
                            android:textColor="@color/must_green" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipCategoryMentorship"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸŒŸ Mentorship"
                            style="@style/Widget.Material3.Chip.Filter"
                            app:chipBackgroundColor="@color/light_green"
                            android:textColor="@color/must_green" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipCategoryCareer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸš€ Career Growth"
                            style="@style/Widget.Material3.Chip.Filter"
                            app:chipBackgroundColor="@color/light_green"
                            android:textColor="@color/must_green" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipCategoryLeadership"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ† Leadership"
                            style="@style/Widget.Material3.Chip.Filter"
                            app:chipBackgroundColor="@color/light_green"
                            android:textColor="@color/must_green" />

                    </com.google.android.material.chip.ChipGroup>

                    <!-- Submit Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSubmit"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="ðŸ“š Add Article"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:backgroundTint="@color/must_green"
                        app:cornerRadius="12dp"
                        style="@style/Widget.Material3.Button" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>