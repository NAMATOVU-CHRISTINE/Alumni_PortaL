<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground"
    tools:context=".CustomizePreferencesActivity">

    <!-- App Bar -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/must_green"
            app:title="âš™ï¸ Customize Preferences"
            app:titleTextColor="@color/white"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:navigationIconTint="@color/white" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Header -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="?attr/colorSurface"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="@drawable/gradient_motivation_bg">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸŽ¯ Personalize Your Experience"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/must_green"
                        android:gravity="center"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Set your preferences to get better recommendations"
                        android:textSize="13sp"
                        android:textColor="?android:attr/textColorSecondary"
                        android:gravity="center" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Interests Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="?attr/colorSurface"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸ’¡ Your Interests"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/must_green"
                        android:layout_marginBottom="12dp" />

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chipGroupInterests"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:chipSpacingHorizontal="8dp"
                        app:chipSpacingVertical="4dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Job Types Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="?attr/colorSurface"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸ’¼ Preferred Job Types"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/must_green"
                        android:layout_marginBottom="12dp" />

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chipGroupJobTypes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:chipSpacingHorizontal="8dp"
                        app:chipSpacingVertical="4dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Locations Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="?attr/colorSurface"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“ Preferred Locations"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/must_green"
                        android:layout_marginBottom="12dp" />

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chipGroupLocations"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:chipSpacingHorizontal="8dp"
                        app:chipSpacingVertical="4dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Notification Preferences -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="?attr/colorSurface"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸ”” Notification Preferences"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/must_green"
                        android:layout_marginBottom="16dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Job Alerts"
                            android:textSize="14sp"
                            android:textColor="?android:attr/textColorPrimary" />

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/switchJobAlerts"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:thumbTint="@color/must_green"
                            app:trackTint="@color/light_green" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Event Notifications"
                            android:textSize="14sp"
                            android:textColor="?android:attr/textColorPrimary" />

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/switchEventNotifications"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:thumbTint="@color/must_green"
                            app:trackTint="@color/light_green" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Mentorship Updates"
                            android:textSize="14sp"
                            android:textColor="?android:attr/textColorPrimary" />

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/switchMentorshipNotifications"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:thumbTint="@color/must_green"
                            app:trackTint="@color/light_green" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Save Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSavePreferences"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Save Preferences"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:backgroundTint="@color/must_green"
                app:cornerRadius="12dp"
                style="@style/Widget.Material3.Button"
                app:icon="@drawable/ic_check"
                app:iconTint="@color/white" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>