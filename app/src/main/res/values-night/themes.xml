<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Dark Theme -->
    <style name="Theme.Alumni_Portal" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Core colors -->
        <item name="colorPrimary">@color/must_green</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/must_gold</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/background_color</item>
        <item name="colorSurface">@color/light_background</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorOnBackground">@color/text_primary</item>

        <!-- App bar and system bars -->
        <item name="android:statusBarColor">@color/dark_gray</item>
        <item name="android:navigationBarColor">@color/dark_gray</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorHint">@color/text_hint</item>

        <!-- Elevation and shapes -->
        <item name="materialCardViewStyle">@style/Widget.Material3.CardView.Elevated</item>
        
        <!-- Additional dark theme specific attributes -->
        <item name="elevationOverlayEnabled">true</item>
        <item name="elevationOverlayColor">@color/white</item>
    </style>

</resources>
