<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Force light theme even in dark mode - no dark theme variation -->
    <style name="Theme.Alumni_Portal" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/must_green</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/must_gold</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Force white backgrounds and black text -->
        <item name="android:colorBackground">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorOnBackground">@color/black</item>

        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="android:navigationBarColor">?attr/colorSurface</item>
    </style>
</resources>
