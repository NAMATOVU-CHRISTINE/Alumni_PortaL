<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.MANAGE_ACCOUNTS" />
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />
    
    <!-- Runtime permissions for core features -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" 
        android:maxSdkVersion="28" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:name=".AlumniPortalApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Alumni_Portal">
        <activity
            android:name=".SignupActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustPan|stateHidden" />
        <!-- FIX: LoginActivity is now the starting point of the app -->
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity 
            android:name=".MainActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name=".HomeActivity" />
        <activity android:name=".ProfileActivity" />
        <activity android:name=".EventsActivity" />
        <activity 
            android:name=".ForgotPasswordActivity"
            android:windowSoftInputMode="adjustPan|stateHidden" />
        <activity 
            android:name=".EditProfileActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name=".AlumniDirectoryActivity" />
        <activity android:name=".JobBoardActivity" />
        <activity android:name=".MentorshipActivity" />
        <activity android:name=".MentorSearchActivity" />
        <activity android:name=".SettingsActivity" />
        <activity android:name=".NewsFeedActivity" />
        <activity android:name=".ViewProfileActivity" />
        <activity android:name=".JobDetailsActivity" />
        <activity 
            android:name=".PostJobActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name=".EventDetailsActivity" />
        <activity 
            android:name=".CreateEventActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name=".ArticleDetailsActivity" />
        <activity 
            android:name=".CreateArticleActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name=".MentorDetailActivity" />
        <activity android:name=".JobDetailActivity" />
        <activity 
            android:name=".CreatePostActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name=".ChatActivity" />
        <activity android:name=".activities.ChatListActivity" />
        <activity 
            android:name=".activities.ChatActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name=".activities.NotificationSettingsActivity" />
        <activity android:name=".activities.PrivacySettingsActivity" />
        <activity 
            android:name=".activities.GmailSetupActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name=".CareerTipsActivity" />
        <activity android:name=".SavedCareerTipsActivity" />
        <activity android:name=".GrowSectionActivity" />
        <activity android:name=".KnowledgeActivity" />
        <activity 
            android:name=".AddArticleActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name=".ArticleDetailActivity" />
        <activity android:name=".JobsActivity" />
        <activity 
            android:name=".AddOpportunityActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name=".OpportunityDetailActivity" />
        <activity android:name=".RecentActivitiesActivity" />
        <activity android:name=".CustomizePreferencesActivity" />
        <activity android:name=".EventsNewsActivity" />
        
        <!-- Services -->
        <service android:name=".services.AlumniNotificationService" 
            android:exported="false" />
    </application>

</manifest>