        <activity 
            android:name=".DebugNewsActivity"
            android:windowSoftInputMode="adjustResize" />
        
        <!-- Scrape News Activity -->
        <activity 
            android:name=".ScrapeNewsActivity"
            android:windowSoftInputMode="adjustResize" />
        
        <!-- Services -->
        <service android:name=".services.AlumniNotificationService" 
            android:exported="false" />
        
        <!-- Firebase Cloud Messaging Service -->
        <service
            android:name=".services.AlumniMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        
        <!-- Data Sync Service (Background Service with ExecutorService) -->
        <service
            android:name=".services.DataSyncService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="dataSync" />
        
        <!-- Broadcast Receivers -->
        <!-- Message Broadcast Receiver -->
        <receiver
            android:name=".receivers.MessageBroadcastReceiver"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="com.namatovu.alumniportal.MESSAGE_RECEIVED" />
            </intent-filter>
        </receiver>
        
        <!-- Network Change Receiver -->
        <receiver
            android:name=".receivers.NetworkChangeReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
                <action android:name="android.net.wifi.WIFI_STATE_CHANGED" />
            </intent-filter>
        </receiver>
        
        <!-- Boot Completed Receiver -->
        <receiver
            android:name=".receivers.BootCompletedReceiver"
            android:enabled="true"
            android:exported="true"
            android:permission="android.permission.RECEIVE_BOOT_COMPLETED">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.QUICKBOOT_POWERON" />
            </intent-filter>
        </receiver>
        
        <!-- NEW SERVICES FOR EXAM REQUIREMENTS -->
        
        <!-- Background Data Sync Service -->
        <service
            android:name=".services.DataSyncBackgroundService"
            android:exported="false"
            android:enabled="true" />
            
        <!-- Web Scraping Service -->
        <service
            android:name=".services.WebScrapingService"
            android:exported="false"
            android:enabled="true" />

        <!-- Default notification icon and color -->
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/ic_notification" />
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/must_green" />
    </application>

</manifest>