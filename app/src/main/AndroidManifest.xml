        <activity 
            android:name=".SettingsActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity 
            android:name=".NewsFeedActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity 
            android:name=".ViewProfileActivity"
