{
  "rules": {
    "chats": {
      "$chatRoomId": {
        ".read": "auth != null && (data.child('info/user1Id').val() === auth.uid || data.child('info/user2Id').val() === auth.uid)",
        ".write": "auth != null && (data.child('info/user1Id').val() === auth.uid || data.child('info/user2Id').val() === auth.uid || !data.exists())",
        "messages": {
          ".indexOn": ["timestamp"]
        }
      }
    }
  }
}
